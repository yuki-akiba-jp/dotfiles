{
  "snippets.extends": {
    "cpp": ["c"],
    "html": ["jinja"],
    "typescript": ["javascript"]
  },

  "coc.source.buffer.priority": 20,
  "snippets.priority": 99,
  "suggest.languageSourcePriority": 20,
  "suggest.floatConfig": {
    "border": true,
    "rounded": true
  },
  "snippets.userSnippetsDirectory": "~/dotfiles/packages/coc-snippets/snippets",
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "~/dotfiles/packages/coc-snippets/snippets"
  ],
  "suggest.noselect": false,
  "suggest.triggerAfterInsertEnter": true,
  "suggest.snippetIndicator": " â–º",
  "suggest.selection": "recentlyUsed",
  "suggest.defaultSortMethod": "none",
  "suggest.localityBonus": true,
  "suggest.enablePreview": true,
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "suggest.removeDuplicateItems": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "typescriptreact",
    "javascriptreact",
    "vue",
    "react",
    "markdown",
    "css",
    "javascript",
    "typescript",
    "json",
    "scss",
    "yaml",
    "python",
    "cpp",
    "c"
  ],
  "tsserver.formatOnType": true,
  "eslint.autoFixOnSave": true,
  "eslint.run": "onSave",
  "htmldjango.djlint.lintOnSave": true,
  "python.formatting.autopep8Path": "/usr/bin/autopep8",
  "python.pythonPath": "/usr/bin/python3"
}
